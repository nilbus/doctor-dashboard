#!/bin/bash
set -o errexit
rvm jruby do bin/bundle install --deployment    # prepare gems for deployment
RAILS_ENV=production bin/rake assets:precompile # compile assets (js, css)
rvm jruby do bin/bundle exec warble             # generate the war file
bin/bundle install --no-deployment              # allow gems to be modified
bin/rake assets:clobber                         # clear precomiled assets
